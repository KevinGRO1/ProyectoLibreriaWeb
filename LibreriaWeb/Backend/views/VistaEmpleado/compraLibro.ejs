<%- include ('partes/header'); -%>

<div class="container" style="padding-top: 20px; padding-inline: 100px;">
    <div class="container color forma" style="padding-top: 10px; padding-bottom: 10px;">
        <h2>Compra Oline</h2>
    </div>    
    <div class="row-lg-12">
        <div class="card">
            <div class="card-body">                
                    <form action="/compra/insert/" method="POST">
                        <div class="container color forma" >
                            <h3>Información del Libro</h3>
                            <div class="form-row">
                                <div class="col">
                                    <label>Titulo</label>
                                    <input type="text" name="titulo" class="form-control" value="<%=libro.titulo%>" disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Autor</label>
                                    <input type="text" name="autor" class="form-control" value="<%=libro.autor%>" disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Editorial</label>
                                    <input type="text" name="editorial" class="form-control" value="<%=libro.editorial%>" disabled>
                                </div>
                            </div>                            
                        </div>  
                        <div class="container color forma" >
                            <h3>Datos de entrega</h3>
                            <div class="form-row">
                                <div class="col">
                                    <label>Departamento</label>
                                    <input type="text" name="departamentoCompra" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Provincia</label>
                                    <input type="text" name="provinciaCompra" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Distrito</label>
                                    <input type="text" name="distritoCompra" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Dirección</label>
                                    <input type="text" name="direccionCompra" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Teléfono</label>
                                    <input type="text" name="telefonoCompra" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="container color forma" >
                            <h3>Total a pagar</h3>
                            <div class="form-row">
                                <div class="col">
                                    <label>Precio</label>
                                    <input type="text" name="precio" class="form-control" value="<%=libro.precio%>" disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Costo de Entrega</label>
                                    <input type="text" name="precioEntrega" class="form-control" value="5.00" disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>IGV</label>
                                    <input type="text" name="igv" class="form-control" value="<%=libro.precio*0.18%>" disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Total</label>
                                    <input type="text" name="total" class="form-control" value="100" disabled>
                                </div>
                            </div>
                        </div>  
                        <button type="submit" class="btn btn-primary" style="margin-inline: 400px; margin-top: 10px;">Pagar</button>             
                    </form>
                
            </div>
        </div>
    </div>
</div>





<%- include ('partes/footer'); -%>