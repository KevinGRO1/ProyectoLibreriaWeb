<%- include ('partes/header'); -%>

<div class="container" style="padding-top: 20px; padding-inline: 250px;">
    <div class="row-lg-9">
        <div class="card">
            <div class="card-body">
                <div class="container color forma">
                    <form action="/clientes/edit/<%= clientes._id %>" method="POST">                          
                            <div class="form-row">
                                <div class="col">
                                    <label>DNI</label>
                                    <input type="text" name="DNI" class="form-control" placeholder="Ingrese DNI" value="<%=clientes.DNI%>">
                                <!-- <small class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Nombre</label>
                                    <input type="text" name="nombre" class="form-control" placeholder="Ingrese Nombre" value="<%=clientes.nombre%>">                        
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <label>Apellido</label>
                                    <input type="text" name="apellido" class="form-control" placeholder="Ingrese Apellido" value="<%=clientes.apellido%>">                        
                                </div>
                            </div>                
                            <div class="form-row">
                                <div class="col">
                                    <label>Email</label>
                                    <input type="email" name="email" class="form-control" placeholder="Ingrese Email" value="<%=clientes.email%>">                        
                                </div>
                            </div>            
                            <div class="form-row">
                                <div class="col">
                                    <label>Dirección</label>
                                    <input type="text" name="direccion" class="form-control" placeholder="Ingrese Dirección" value="<%=clientes.direccion%>">                        
                                </div>            
                            </div>                
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>Teléfono</label>
                                    <input type="text" name="telefono" class="form-control" placeholder="Ingrese Teléfono" value="<%=clientes.telefono%>">  
                                </div>
                            </div>
                    
                            <button type="submit" class="btn btn-primary" style="margin-inline: 250px; margin-top: 10px;">Actualizar</button>
                        </form>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
