                <table border="1" class="table table-bordered table-hover row-lg-12" style="width: 1100px;">
                    <thead>
                        <tr class="encabezado">
                            <th>N°</th>
                            <th>DNI</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
