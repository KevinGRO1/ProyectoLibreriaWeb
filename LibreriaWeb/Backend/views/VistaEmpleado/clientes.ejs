                                <td><%= clientes[i].direccion %></td>
                                <td><%= clientes[i].telefono %></td>
                                <td>                                
                                    <a href="/clientes/delete/<%= clientes[i]._id %>" class="btn btn-danger">Eliminar</a>
                                    <a href="/clientes/editar/<%= clientes[i]._id %>" class="btn btn-info">Editar</a>
