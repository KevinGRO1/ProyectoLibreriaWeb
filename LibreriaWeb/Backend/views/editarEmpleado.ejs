<%- include ('partes/header'); -%>

<div class="container">
    <div class="row">

        <div class="col-md-4 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/empleados/edit/<%= empleados._id %>" method="POST">
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="DNI" placeholder="Inserte DNI" class="form-control"  value="<%=empleados.DNI%>" >
                        </div>
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="nombre" placeholder="Inserte Nombre" class="form-control" value="<%=empleados.nombre%>">
                        </div>
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="apellido" placeholder="Inserte Apellido" class="form-control"  value="<%=empleados.apellido%>">
                        </div>
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="cargo" placeholder="Inserte Cargo" class="form-control"  value="<%=empleados.cargo%>">
                        </div>
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="direccion" placeholder="Inserte Direccion" class="form-control"  value="<%=empleados.direccion%>">
                        </div>
                        <div class="form-group" style="margin-top:10px">
                            <input type="text" name="telefono" placeholder="Inserte Telefono" class="form-control"  value="<%=empleados.telefono%>">
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-block" style="margin-top:10px">
                            Actualizar
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>

<%- include ('partes/footer'); -%>