<%- include ('partes/header'); -%>


<div class="container" style="padding-top: 20px;">

    <div class="col" style="padding-inline: 0.1px;">

        <div class="row-lg-9">
            <div class="card">
                <div class="card-body">
                    <form action="/editorial/insert/" method="POST">

                        <div class="form-group" style="margin-top:10px" >
                            <input type="text" name="nombre" placeholder="Inserte Nombre" class="form-control" >
                        </div>
                      
                        <div class="form-group " style="margin-top:10px">
                            <input type="text" name="direccion" placeholder="Inserte Direccion" class="form-control" >
                        </div>
                                              
                        <button type="submit" class="btn btn-primary btn-block" style="margin-top:10px">
                            Agregar
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="row-lg-9">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>N°</th>
                        <th>Nombre</th>
                        <th>Direccion</th>                  
                        <th>Operación</th>
                    </tr>
                </thead>
                <body>
                    <% for(var i =0; i< editoriales.length; i++){ %>
                        <tr>
                            <td><%= i + 1 %> </td>
                            <td><%= editoriales[i].nombre %></td>
                            <td><%= editoriales[i].direccion %></td>                        
                            <td>                                
                                <a href="/editorial/delete/<%= editoriales[i]._id %>" class="btn btn-danger">Eliminar</a>
                                <a href="/editorial/editar/<%= editoriales[i]._id %>" class="btn btn-info">Editar</a>
                            </td>

                        </tr>
                    <% } %>
                </body>
            </table>
        </div>
    </div>
</div>


<%- include ('partes/footer'); -%>